<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FightBack_SS.SS_RegistrationScreen" BackgroundImage = "RegistrationBackgroundImg.jpg">
	<StackLayout Padding = "5,50,5,5">
		<StackLayout HorizontalOptions="Center">
			<Label x:Name="Registration" Text="Registration" Font="28" FontAttributes="Bold" TextColor="Yellow" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" BackgroundColor="Transparent" HeightRequest="70" />
		</StackLayout>
		<ScrollView Orientation="Vertical" x:Name="myScrollView">
			<StackLayout Orientation="Vertical" x:Name="formStack" Spacing="5" HorizontalOptions = "Center" VerticalOptions = "Center">
				<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" WidthRequest="300" Padding="10,10,10,10">
					<Label Text="Name:" TextColor="White" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" />
					<Entry x:Name="firstName" TextColor="White" HorizontalOptions="EndAndExpand" WidthRequest="200"/>
				</StackLayout>
				<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" WidthRequest="300" Padding="10,10,10,10">
					<Label Text="Address:" TextColor="White" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" />
					<Entry x:Name="address" TextColor="White" HorizontalOptions="EndAndExpand" WidthRequest="200" />
				</StackLayout>
				<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" WidthRequest="300" Padding="10,10,10,10">
					<Label Text="Mobile#:" TextColor="White" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" />
					<Entry x:Name="mobile" TextColor="White" HorizontalOptions="EndAndExpand" WidthRequest="200" Keyboard="Telephone" />
				</StackLayout>
				<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" WidthRequest="300" Padding="10,10,10,10">
					<Label Text="EmailId:" TextColor="White" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" />
					<Entry x:Name="emailId" TextColor="White" HorizontalOptions="EndAndExpand" WidthRequest="200" Keyboard="Telephone" />
				</StackLayout>
				<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" WidthRequest="300" Padding="10,10,10,10">
					<Label Text="Username:" TextColor="White" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" />
					<Entry x:Name="username" TextColor="White" HorizontalOptions="EndAndExpand" WidthRequest="200" Keyboard="Default"/>
				</StackLayout>
				<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" WidthRequest="300" Padding="10,10,10,10">
					<Label Text="Password:" TextColor="White" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" />
					<Entry x:Name="password" TextColor="White" HorizontalOptions="EndAndExpand" WidthRequest="200" Keyboard="Default" IsPassword="true" />
				</StackLayout>
				<BoxView HeightRequest="40" />
			</StackLayout>
		</ScrollView>
		<StackLayout HorizontalOptions="CenterAndExpand" Orientation = "Horizontal" >
			<Label x:Name="Register" Text="SUBMIT" Font="22" FontAttributes="Bold" TextColor="Yellow" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" BackgroundColor="Transparent" WidthRequest="100" HeightRequest="70" />
			<Label x:Name="Cancel" Text="CANCEL" Font="22" FontAttributes="Bold" TextColor="Yellow" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" BackgroundColor="Transparent" WidthRequest="100" HeightRequest="70" />
		</StackLayout>
	</StackLayout>
</ContentPage>